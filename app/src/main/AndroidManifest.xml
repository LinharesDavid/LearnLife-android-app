<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.learnlife.learnlife">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LearnLifeApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login.view.LoginActivity"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.view.RegisterActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".main.view.MainActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".tags.view.TagActivity"
            android:noHistory="true"
            android:screenOrientation="sensorPortrait" />
        <activity android:name=".profile.view.ProfileUserActivity"
            android:theme="@style/BackTheme"/>
        <activity android:name=".profile.view.UserBadgeActivity"
            android:theme="@style/BackTheme"/>
        <activity android:name=".communityChallenge.CommunityChallengeActivity"
            android:theme="@style/BackTheme"/>
        <activity android:name=".communityChallenge.usercommunitychallenges.UserCommunityChallengeActivity"
            android:theme="@style/BackTheme"/>
        <activity android:name=".communityChallenge.usercommunitychallenges.createchallenge.CreateChallengeActivity"
            android:theme="@style/BackTheme">
        </activity>

        <service android:name="com.learnlife.learnlife.services.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>