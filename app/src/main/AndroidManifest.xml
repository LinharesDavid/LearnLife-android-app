<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.learnlife.learnlife">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:name=".LearnLifeApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".login.view.LoginActivity" android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.view.RegisterActivity" android:screenOrientation="sensorPortrait"/>
        <activity android:name=".Main.view.MainActivity" android:screenOrientation="sensorPortrait">

        </activity>
        <activity android:name=".tags.view.TagActivity" android:noHistory="true" android:screenOrientation="sensorPortrait"/>
    </application>

</manifest>