<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txv_item_title"
        style="@style/LearnLife.TextAppearance.Body.Black.Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_08"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/margin_08"
        app:layout_constraintEnd_toStartOf="@+id/imbFinish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Item Title" />

    <TextView
        android:id="@+id/txv_item_content"
        style="@style/LearnLife.TextAppearance.Body.Black.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_08"
        android:layout_marginEnd="@dimen/margin_08"
        android:layout_marginStart="@dimen/margin_16"
        app:layout_constraintBottom_toBottomOf="parent"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintEnd_toStartOf="@+id/imbFinish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txv_item_title"
        tools:text="Item Content" />

    <ImageButton
        android:id="@+id/imbFinish"
        android:layout_width="@dimen/width_finish_button"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_08"
        android:layout_marginEnd="@dimen/margin_08"
        android:layout_marginTop="@dimen/margin_08"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_finish" />

</android.support.constraint.ConstraintLayout>