<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ActivityMainStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    tools:context="com.learnlife.learnlife.home.view.HomeActivity">

    <ImageButton
        android:id="@+id/imbDecline"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:clipToPadding="false"
        android:elevation="40dp"
        android:onClick="btnDeclineClicked"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_decline_challenge"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idFling" />

    <ImageButton
        android:id="@+id/imbAccept"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:elevation="40dp"
        android:onClick="btnAcceptClicked"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_accept_challenge"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idFling" />

    <com.lorentzos.flingswipe.SwipeFlingAdapterView
        android:id="@+id/idFling"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_08"
        android:layout_marginTop="@dimen/margin_08"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvTodayDate"
        app:rotation_degrees="16" />

    <TextView
        android:id="@+id/txvNoMoreChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_08"
        android:layout_marginEnd="@dimen/margin_08"
        android:layout_marginStart="@dimen/margin_08"
        android:layout_marginTop="@dimen/margin_08"
        android:fontFamily="@font/comfortaa_regular"
        android:text="@string/no_challenge"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/txvTodayDate"
        style="@style/LearnLife.TextAppearance.Title1.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:fontFamily="@font/comfortaa_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="14 fevrier 2018" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/white"
        android:background="@color/white"
        android:elevation="@dimen/elevation_16"
        app:menu="@menu/menu_bottom_nav"
        app:itemIconTint="@drawable/selector_bottom_nav"
        app:itemTextColor="@drawable/selector_bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


    </android.support.design.widget.BottomNavigationView>


</android.support.constraint.ConstraintLayout>
