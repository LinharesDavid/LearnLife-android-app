<RelativeLayout
    android:id="@+id/ctnMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:background="@drawable/colorstate_chip_drawable">

    <TextView
        android:id="@+id/txvChips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_08"
        tools:text="ChipText"
        style="@style/LearnLife.TextAppearance.Body.Black"
        android:textSize="@dimen/font18"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/imbAddChips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/txvChips"
        android:layout_marginEnd="@dimen/margin_05"
        android:layout_marginStart="@dimen/margin_05"
        android:background="@drawable/ic_add_chips"
        android:layout_centerVertical="true"/>
</RelativeLayout>