<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".profile.view.ProfileFragment">

    <ImageView
        android:id="@+id/imvProfile"
        android:layout_width="@dimen/profil_picture_size"
        android:layout_height="@dimen/profil_picture_size"
        android:layout_marginEnd="@dimen/margin_08"
        android:layout_marginStart="@dimen/margin_08"
        android:layout_marginTop="@dimen/margin_68"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shape_button" />

    <TextView
        android:id="@+id/txvFailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_08"
        android:layout_marginEnd="@dimen/margin_08"
        android:layout_marginStart="@dimen/margin_08"
        android:layout_marginTop="@dimen/margin_08"
        style="@style/TextViewFailed"
        tools:text="14\nFailed"
        app:layout_constraintBottom_toBottomOf="@+id/imvProfile"
        app:layout_constraintEnd_toStartOf="@+id/imvProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imvProfile" />

    <TextView
        android:id="@+id/txvSucceeded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_08"
        android:layout_marginEnd="@dimen/margin_08"
        android:layout_marginStart="@dimen/margin_08"
        android:layout_marginTop="@dimen/margin_08"
        style="@style/TextViewSucceeded"
        tools:text="23\nsuccess"
        app:layout_constraintBottom_toBottomOf="@+id/imvProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imvProfile"
        app:layout_constraintTop_toTopOf="@+id/imvProfile" />

    <Button
        android:id="@+id/btnBadges"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_32"
        android:layout_marginStart="@dimen/margin_32"
        android:layout_marginTop="@dimen/margin_48"
        android:text="@string/badges"
        style="@style/ButtonProfileStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imvProfile" />


    <Button
        android:id="@+id/btnTags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_32"
        android:layout_marginStart="@dimen/margin_32"
        android:layout_marginTop="@dimen/margin_32"
        android:text="@string/tags"
        style="@style/ButtonProfileStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBadges" />
</android.support.constraint.ConstraintLayout>