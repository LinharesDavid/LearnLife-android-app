<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".login.view.RegisterActivity">

    <View
        android:id="@+id/viewSignUp"
        android:layout_width="match_parent"
        android:layout_height="50dp" android:background="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/lblWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_bold"
        android:text="@string/sign_up"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewSignUp" />

    <EditText
        android:id="@+id/edtFirstname"
        style="@style/CustomEditText"
        android:layout_width="0dp"
        android:layout_height="@dimen/EditTextHeight"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:hint="@string/firstname"
        android:layout_marginTop="48dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewSignUp" />

    <EditText
        android:id="@+id/edtLastname"
        style="@style/CustomEditText"
        android:layout_width="0dp"
        android:layout_height="@dimen/EditTextHeight"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:hint="@string/lastname"
        android:layout_marginTop="24dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtFirstname" />


    <EditText
        android:id="@+id/edtEmail"
        style="@style/CustomEditText"
        android:layout_width="0dp"
        android:layout_height="@dimen/EditTextHeight"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:hint="@string/email"
        android:layout_marginTop="24dp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtLastname" />


    <EditText
        android:id="@+id/edtPassword"
        style="@style/CustomEditText"
        android:layout_width="0dp"
        android:layout_height="@dimen/EditTextHeight"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:hint="@string/password"
        android:layout_marginTop="24dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtEmail" />


    <EditText
        android:id="@+id/edtConfirmPassword"
        style="@style/CustomEditText"
        android:layout_width="0dp"
        android:layout_height="@dimen/EditTextHeight"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:hint="@string/confirm_password"
        android:layout_marginTop="24dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPassword" />

    <ImageButton
        android:id="@+id/imbRegister"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:onClick="imbRegisterEvent"
        android:background="@drawable/shape_button"
        android:src="@drawable/ic_arrow_register"
        android:padding="7dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtConfirmPassword" />

    <ProgressBar
        android:id="@+id/prbRegister"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imbRegister" />

</android.support.constraint.ConstraintLayout>